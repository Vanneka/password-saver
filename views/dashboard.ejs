<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title>Password Saver | Your Dashboard</title>
</head>

<body>

        <div class="container-fluid ">
            <div class="row dashboard">
                <!-- LEFT SIDE  -->
                <div class="left col-lg-2 col-md-2 col-xs-12 pb-4">
                    <div class="user-info">
                        <h3 class="user-name"><%- name  %></h3>
                        <p class="user-email"><%- email  %></p>
                    </div>
                    <div class="">
                        <a href="" class="logout-btn">Logout</a>
                    </div>
                </div>
                <!-- LEFT SIDE  -->
                <!-- RIGHT SIDE  -->
                <div class="right-side col-lg-10 col-md-10 col-xs-12">
                    <div class="right-header">
                        <div class="top-bar">
                            <div class="top-bar-justify">
                                <div class="big-inbox">
                                    Hi <%- name  %>
                                </div>
                            </div>
                            <div class="profile2">
                                <div class="icon-name5"> <%- name  %> </div>
                            </div>
                        </div>
                        <hr class="new-hr">
                        <div class="right-bottom">
                            <div class="form has-search">
                                <%- include ('./partials/form') %>
                            </div>
                        </div>
                    </div>
                    <div class="right-body" id="the-table">
                        <table class="message table table-borderless ">
                            <tr class="text-white">
                                <th>S/N</th>
                                <th>Password</th>
                                <th>Password URL</th>
                                <th>User Control</th>
                            </tr>
                            <tbody>
                         
                            <tr>
                                <td>
                                    <div class="number text-white">
                                        1.
                                    </div>
                                </td>
                                <td>
                                    <div id="password-item">
                                        <input type="password" name="" id="the-password" value="jdfksjfsjf;dn;a"
                                            disabled>
                                        <i id="password-toggle" class="text-white fa fa-eye"></i>
                                    </div>
                                </td>
                                <td>
                                    <div class="password-url">
                                        <a href="https://uicookies.com/bootstrap-profile-page/" target="_blank">Link to
                                            login
                                            page</a>
                                    </div>
                                </td>
                                <td>
                                    <div id="buttons">
                                        <button class="btn2 butona"> Delete
                                            <span class="tag text-white">
                                                <i class="fa fa-trash "></i>
                                            </span>
                                        </button>

                                        <button class="btn2 butonb"> Edit
                                            <span class="tag">
                                                <i class="fa fa-pencil"></i>
                                            </span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                                   
                        </tbody>
                            <!-- create multiple items  -->
                            <div class="item">
                            </div>
                        </table>
                    </div>
                    <%- include('./partials/footer'); %>
                </div>
                <!-- RIGHT SIDE  -->

            </div>
        </div>
    
    <script defer src="/js/functions.js"></script>
</body>

</html>